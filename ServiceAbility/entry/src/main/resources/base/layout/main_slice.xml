<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:padding="5vp"
    ohos:alignment="horizontal_center"
    ohos:orientation="vertical">

    <Button
        ohos:id="$+id:start_local_btn"
        ohos:height="match_content"
        ohos:width="300vp"
        ohos:padding="5vp"
        ohos:text="开启本地Service"
        ohos:background_element="$graphic:button_bg"
        ohos:top_margin="50vp"
        ohos:text_alignment="center"
        ohos:text_size="18fp"/>

    <Button
        ohos:id="$+id:stop_local_btn"
        ohos:height="match_content"
        ohos:width="300vp"
        ohos:padding="5vp"
        ohos:text="停止本地Service"
        ohos:background_element="$graphic:button_bg"
        ohos:top_margin="10vp"
        ohos:text_alignment="center"
        ohos:text_size="18fp"/>

    <Button
        ohos:id="$+id:connect_local_btn"
        ohos:height="match_content"
        ohos:width="300vp"
        ohos:top_margin="10vp"
        ohos:padding="5vp"
        ohos:text="连接本地Service"
        ohos:background_element="$graphic:button_bg"
        ohos:text_alignment="center"
        ohos:text_size="18fp"/>

    <Button
        ohos:id="$+id:disconnect_local_btn"
        ohos:height="match_content"
        ohos:width="300vp"
        ohos:top_margin="10vp"
        ohos:padding="5vp"
        ohos:text="断开连接本地Service"
        ohos:background_element="$graphic:button_bg"
        ohos:text_alignment="center"
        ohos:text_size="18fp"/>

    <Button
        ohos:id="$+id:keep_run_btn"
        ohos:height="match_content"
        ohos:width="300vp"
        ohos:padding="5vp"
        ohos:top_margin="10vp"
        ohos:bottom_margin="10vp"
        ohos:text="前台服务"
        ohos:background_element="$graphic:button_bg"
        ohos:text_alignment="center"
        ohos:text_size="18fp"/>

    <Text
        ohos:width="match_parent"
        ohos:height="1vp"
        ohos:top_margin="10vp"
        ohos:bottom_margin="10vp"
        ohos:background_element="#220000FF"/>

    <Button
        ohos:id="$+id:start_remote_btn"
        ohos:height="match_content"
        ohos:width="300vp"
        ohos:padding="5vp"
        ohos:text="开启远程Service"
        ohos:background_element="$graphic:button_bg"
        ohos:top_margin="10vp"
        ohos:text_alignment="center"
        ohos:text_size="18fp"/>

    <Button
        ohos:id="$+id:stop_remote_btn"
        ohos:height="match_content"
        ohos:width="300vp"
        ohos:padding="5vp"
        ohos:text="停止远程Service"
        ohos:background_element="$graphic:button_bg"
        ohos:top_margin="10vp"
        ohos:text_alignment="center"
        ohos:text_size="18fp"/>

    <Button
        ohos:id="$+id:connect_remote_btn"
        ohos:height="match_content"
        ohos:width="300vp"
        ohos:top_margin="10vp"
        ohos:padding="5vp"
        ohos:text="连接远程Service"
        ohos:background_element="$graphic:button_bg"
        ohos:text_alignment="center"
        ohos:text_size="18fp"/>

    <Button
        ohos:id="$+id:disconnect_remote_btn"
        ohos:height="match_content"
        ohos:width="300vp"
        ohos:top_margin="10vp"
        ohos:padding="5vp"
        ohos:text="断开连接远程Service"
        ohos:background_element="$graphic:button_bg"
        ohos:text_alignment="center"
        ohos:text_size="18fp"/>
</DirectionalLayout>