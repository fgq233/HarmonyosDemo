<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:id="$+id:root_layout"
    ohos:height="match_parent"
    ohos:width="match_parent">

    <Text
        ohos:id="$+id:second_text1"
        ohos:height="35vp"
        ohos:width="match_content"
        ohos:above="$+id:backBtn"
        ohos:bottom_margin="50vp"
        ohos:horizontal_center="$+id:root_layout"
        ohos:multiple_lines="true"
        ohos:text="用于接受 MainAbility参数的 Text"
        ohos:text_size="15fp"
        ohos:vertical_center="$+id:root_layout"/>

    <Button
        ohos:id="$+id:backBtn"
        ohos:height="35vp"
        ohos:width="200vp"
        ohos:background_element="$graphic:button_bg"
        ohos:bottom_margin="50vp"
        ohos:center_in_parent="true"
        ohos:multiple_lines="true"
        ohos:text="返回Main Ability"
        ohos:text_size="12fp"/>

    <Button
        ohos:id="$+id:startBtn"
        ohos:height="35vp"
        ohos:width="200vp"
        ohos:background_element="$graphic:button_bg"
        ohos:below="$id:backBtn"
        ohos:bottom_margin="50vp"
        ohos:center_in_parent="true"
        ohos:multiple_lines="true"
        ohos:text="跳转到SecondAblice2"
        ohos:text_size="12fp"
        ohos:top_margin="50vp"/>

    <Text
        ohos:id="$+id:second_text2"
        ohos:height="35vp"
        ohos:width="match_content"
        ohos:below="$+id:backBtn"
        ohos:bottom_margin="50vp"
        ohos:horizontal_center="$+id:root_layout"
        ohos:multiple_lines="true"
        ohos:text="用于接受 SecondAblice2 的 Text"
        ohos:text_size="15fp"
        ohos:vertical_center="$+id:root_layout"/>
</DependentLayout>